version: '3'

services:
  webdav:
    build: ./webdav/latest
    environment:
      - TZ
      - WEBDAV_USERNAME
      - WEBDAV_PASSWORD
    volumes:
      - "./data/webdav/storage:/var/lib/dav"
      - "./data/webdav/user.passwd:/user.passwd"
    restart: always
    ports:
      - "${WEBDAV_PORT}:80"
    networks:
      - sync_net
  sync:
    build: ./sync
    environment:
      - TZ
      - SYNC_WEBDAV_USERNAME
      - SYNC_WEBDAV_PASSWORD
    volumes:
      - "./data/sync/config/default:/usr/src/sync/config/default"
      - "./data/webdav/storage:/usr/src/sync/config/share:ro"
      - "./data/sync/logs:/var/log/rclone-sync"
    restart: always
    networks:
      - sync_net

networks:
  sync_net:
    driver: bridge

